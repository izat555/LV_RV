<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/ten_dp">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:textSize="@dimen/eighteen_sp"
        android:textColor="@color/colorPrimary"
        android:text="@string/title_s"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_dialog_year"
        android:layout_below="@+id/tv_dialog_title"
        android:layout_marginTop="@dimen/five_dp"
        android:textSize="@dimen/eighteen_sp"
        android:textColor="@color/colorPrimary"
        android:text="@string/year_s"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_dialog_imdbId"
        android:layout_below="@+id/tv_dialog_year"
        android:layout_marginTop="@dimen/five_dp"
        android:textSize="@dimen/eighteen_sp"
        android:textColor="@color/colorPrimary"
        android:text="@string/imdbid_s"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_dialog_type"
        android:layout_below="@+id/tv_dialog_imdbId"
        android:layout_marginTop="@dimen/five_dp"
        android:textSize="@dimen/eighteen_sp"
        android:textColor="@color/colorPrimary"
        android:text="@string/type_s"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>